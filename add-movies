<body>
  <header>
    <h1>My Movie Hub</h1>
    <p>Edit one list in the code to add more movies.</p>
  </header>

  <main class="container">
    <section id="movies" class="movies-grid">
      <!-- Movies will be injected here -->
    </section>
  </main>

  <script>
    // === EDIT ONLY THIS PART TO ADD MOVIES ===
    // For each movie, set:
    // name: what you want to display
    // id: Google Drive file ID (from the share link)
    //
    // Example share link:
    // https://drive.google.com/file/d/1_qJqk2Ss1f45puz3xGQcdD1NxM3ipupj/view
    // File ID is: 1_qJqk2Ss1f45puz3xGQcdD1NxM3ipupj

    const movies = [
      {
        name: "Ant-Man",
        id: "1_qJqk2Ss1f45puz3xGQcdD1NxM3ipupj"
      },
      {
        name: "Avengers: Endgame",
        id: "1UsxNtlBxGFp955GwEB-s8wYJCA6bXt7e"
      }

      // Add more like this:
      // { name: "Movie Name", id: "YOUR_FILE_ID_HERE" },
    ];
    // === STOP EDITING HERE ===

    const moviesContainer = document.getElementById("movies");

    movies.forEach(movie => {
      const card = document.createElement("article");
      card.className = "movie-card";

      card.innerHTML = `
        <div class="movie-title">${movie.name}</div>
        <div class="movie-video">
          <iframe
            src="https://drive.google.com/file/d/${movie.id}/preview"
            allow="autoplay"
            allowfullscreen
          ></iframe>
        </div>
        <div class="movie-meta">
          Google Drive ID: ${movie.id}
        </div>
      `;

      moviesContainer.appendChild(card);
    });
  </script>
</body>
</html>
