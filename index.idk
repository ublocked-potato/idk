<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Movies (Any Source)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    body {
      background-color: #000;
      color: #f5f5f5;
      min-height: 100vh;
    }

    header {
      padding: 20px;
      text-align: center;
      background: #111;
      border-bottom: 1px solid #333;
    }

    header h1 {
      font-size: 2rem;
      margin-bottom: 5px;
    }

    header p {
      font-size: 0.9rem;
      color: #aaa;
    }

    .container {
      max-width: 1100px;
      margin: 20px auto 40px auto;
      padding: 0 15px;
    }

    .movies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .movie-card {
      background: #111;
      border-radius: 8px;
      padding: 15px;
      border: 1px solid #222;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .movie-title {
      font-size: 1.1rem;
      font-weight: bold;
    }

    .movie-video {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%; /* 16:9 */
      border-radius: 4px;
      overflow: hidden;
      border: 1px solid #333;
    }

    .movie-video iframe,
    .movie-video video {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      border: 0;
    }

    .movie-meta {
      font-size: 0.85rem;
      color: #bbb;
      word-break: break-all;
    }
  </style>
</head>
<body>
  <header>
    <h1>My Movie Hub</h1>
    <p>Edit one list in the code to add more movies from any site.</p>
  </header>

  <main class="container">
    <section id="movies" class="movies-grid">
      <!-- Movies will be injected here -->
    </section>
  </main>

  <script>
    // === EDIT ONLY THIS PART TO ADD MOVIES ===
    // Put the FULL embed URL you would normally use inside an <iframe>.
    //
    // Examples:
    // YouTube watch link:  https://www.youtube.com/watch?v=VIDEO_ID
    // YouTube embed link:  https://www.youtube.com/embed/VIDEO_ID
    //
    // Google Drive view:   https://drive.google.com/file/d/FILE_ID/view
    // Google Drive embed:  https://drive.google.com/file/d/FILE_ID/preview
    //
    // Vimeo:               https://player.vimeo.com/video/VIDEO_ID
    //
    // Direct MP4 file:     use type: "video" and the direct .mp4 URL.

    const movies = [
      {
        name: "Ant-Man (Drive)",
        type: "iframe",
        embedUrl: "https://drive.google.com/file/d/1_qJqk2Ss1f45puz3xGQcdD1NxM3ipupj/preview"
      },
      {
        name: "Avengers: Endgame (Drive)",
        type: "iframe",
        embedUrl: "https://drive.google.com/file/d/1UsxNtlBxGFp955GwEB-s8wYJCA6bXt7e/preview"
      },
      // Example YouTube (replace VIDEO_ID):
      // {
      //   name: "Some YouTube Trailer",
      //   type: "iframe",
      //   embedUrl: "https://www.youtube.com/embed/VIDEO_ID"
      // },
      // Example direct MP4:
      // {
      //   name: "My MP4 File",
      //   type: "video",
      //   embedUrl: "https://example.com/path/to/video.mp4"
      // }
    ];
    // === STOP EDITING HERE ===

    const moviesContainer = document.getElementById("movies");

    movies.forEach(movie => {
      const card = document.createElement("article");
      card.className = "movie-card";

      let playerHtml = "";

      if (movie.type === "video") {
        // Use <video> tag for direct file URLs (mp4, webm, etc.)
        playerHtml = `
          <video controls>
            <source src="${movie.embedUrl}" />
            Your browser does not support the video tag.
          </video>
        `;
      } else {
        // Default: treat as iframe embed URL
        playerHtml = `
          <iframe
            src="${movie.embedUrl}"
            allow="autoplay; encrypted-media"
            allowfullscreen
          ></iframe>
        `;
      }

      card.innerHTML = `
        <div class="movie-title">${movie.name}</div>
        <div class="movie-video">
          ${playerHtml}
        </div>
        <div class="movie-meta">
          Source: ${movie.embedUrl}
        </div>
      `;

      moviesContainer.appendChild(card);
    });
  </script>
</body>
</html>
